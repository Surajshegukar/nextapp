{
  "name": "nextapp",
  "private": true,
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.1",
    "next": "^15.5.3",
    "prisma": "^6.16.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-server-dom-webpack": "^19.1.1",
    "sequelize": "^6.37.7",
    "uuid": "^11.1.0"
  },
  "scripts": {
    "install-all": "npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:admin\" \"npm run dev:web\"",
    "dev:server": "cross-env NODE_ENV=development nodemon index.js",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:web": "cd apps/website && npm run dev",
    "build": "npm run build-admin && npm run build-web",
    "build-admin": "cd apps/admin && next build",
    "build-web": "cd apps/website && next build",
    "start": "npm run start:server",
    "start:server": "cross-env NODE_ENV=production node index.js"
  }
}
